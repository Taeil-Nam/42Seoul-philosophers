NAME			=	philo

CC				=	cc
CFLAG			=	-Wall -Wextra -Werror
RM				=	rm -f

INCLUDES		=	includes/

SRCS			=	srcs/philo_main.c				\
					srcs/ft_init_info.c				\
					srcs/ft_init_philo.c			\
					srcs/ft_atol.c					\
					srcs/ft_strtol.c				\
					srcs/ft_strtol_utils.c			\
					srcs/ft_error.c					\
					srcs/ft_free.c					\
					
OBJS			=	$(SRCS:.c=.o)

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAG) $(OBJS) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAG) -I$(INCLUDES) -c $< -o $@

clean :
	$(RM) $(OBJS)

fclean : clean
	$(RM) $(NAME)

re:
	make fclean
	make all

.PHONY : all bonus clean fclean re